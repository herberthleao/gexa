<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.ButtonBar ?>
<?import javafx.scene.control.TableView ?>
<?import javafx.scene.layout.BorderPane ?>
<?import javafx.geometry.Insets ?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.skin.TableHeaderRow?>
<BorderPane
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="me.herberthleao.gexa.controllers.StockController"
>
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <top>
        <ButtonBar>
            <padding>
                <Insets topRightBottomLeft="10" />
            </padding>
            <buttons>
                <Button text="Registrar Produto" ButtonBar.buttonData="LEFT" />
                <Button text="Registrar Entrada" ButtonBar.buttonData="LEFT" />
            </buttons>
        </ButtonBar>
    </top>
    <center>
        <TableView>
            <BorderPane.margin>
                <Insets bottom="10" top="10" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn text="ID" />
                <TableColumn text="Nome" />
                <TableColumn text="Categoria" />
                <TableColumn text="Quantidade" />
                <TableColumn text="Valor" />
                <TableColumn text="Validade" />
                <TableColumn text="Descrição" />
            </columns>
        </TableView>
    </center>
</BorderPane>
